<h1>Update Pet</h1>

<form class="" action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="">Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label for="">Choose ONE existing owner:</label>

  <br>

  <%@owners.each do |owner| %>
    <input type="radio" name="pet[owner_ids][]" id="<%= owner.id%>" value="<%=owner.id%>" <%="checked" if @pet.owner == owner %>><%=owner.name%>
    </input>
  <%end%>

  <br>

  <label for="">OR create a new owner:</label>
  <br>
  <label for="">name:</label>
  <input type="text" name="owner[name]" id= "owner_name" value="">
  </input>
  <br>
  <input type="submit" name="" value="Update Pet">

</form>
